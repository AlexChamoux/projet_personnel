{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <p><a href="{{ path('app_account') }}"><img src="{{ asset('icons/back.svg') }}" class="icons" alt="flÃ¨che de retour"></a></p>

    <h1 class="text-center" style="margin-bottom: 10vh;">Informations Personnelles</h1>
    <p><strong>Nom:</strong> {% if user.gender == 1 %}
        M.
    {% elseif user.gender == 2 %}
        Mme
    {% else %}
    
    {% endif %}
     {{ user.firstname }} {{ user.lastname }}</p>
    <p><strong>E-mail:</strong> {{ user.email }}</p>
    <p><strong>Date de naissance:</strong> {{ user.birthDate|date('Y-m-d') }}</p>
    <p><strong>Adresse:</strong> 
        {% if addresses is not empty %}
            <ul>
                {% for address in addresses %}
                    <li>
