<div class="product_container">
      <a href="{{ path('product_details', {'slug': product.slug}) }}" class="product_link">
        <div class="product_img">
          <img class="img-fluid" src="{{ asset('upload/products/' ~ product.slug ~ '/' ~ product.mainImage) }}" alt="Image principale du produit">
        </div>
        <div class="product_action_box">
          <ul class="list_none product_action_btn">
            <li><a href="{{ path('cart_add', {'id': product.id}) }}" class="cart" id="cart-add-link"><img class="custom-icon" src="{{ asset('icons/cart_plus.png') }}" alt="icône ajout au caddie"></a></li>
            <li><a href="{{ path('product_details', {'slug': product.slug}) }}" class="details"><img class="custom-icon" src="{{ asset('icons/loupe.png') }}" alt="icône loupe"></a></li>
          </ul>
        </div>
      </a>
      <div class="product_info text-center">
        <h6 class="product_title">{{ product.nameProduct }}</h6>
        <div class="product_price">
          <span class="price">{{ product.priceProduct }}€</span>
        </div>
      </div>
</div>