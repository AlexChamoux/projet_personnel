<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style>
                .nav-item{
                    list-style: none;
                }
                .custom-bg-color {
                    background-color: #D4EDFF;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
            </script>
        {% endblock %}
    </head>
    <body>
        <header class="p-3">
            <div class="row custom-bg-color">
                <div class="col-sm-3"><p>Le spécialiste de la brumisation</p></div>
                <div class="col-sm-5"></div>
                <div class="col-sm-4" style="display: inline;">
                    +33 (0)3 73 57 00 79
                    {% if is_granted('ROLE_USER') %}                        
                            <a href="{{ path('app_logout') }}" class="btn btn-danger mx-2">Déconnexion</a>
                            <a href="{{ path('app_account') }}" class="btn btn-success mx-2 text-white">Mon compte</a>                       
                    {% else %}                        
                            <a href="{{ path('app_login') }}" class="btn btn-primary mx-2">Connexion</a> 
                            <a href="{{ path('app_register') }}" class="btn btn-warning mx-2">Inscription</a>
                    {% endif %}
                </div>

            </div>
        
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">

                        <div class="col-sm-1"><a href="{{ path('app_index') }}">Accueil</a></div>
                        <div class="col-sm-5">
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link text-black" data-bs-toggle="dropdown">Nos Catégories de Brumisateurs</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Nos Brumisateurs</a></li>
                                    <li><a href="#">Brumisateurs basse pression</a></li>
                                    <li><a href="#">Brumisateurs haute pression</a></li>
                                    <li><a href="#">Ventilateurs brumisateurs</a></li>
                                    <li><a href="#">Les Accessoires</a></li>
                                    <li><a href="#">Rafraichisseurs d'Air</a></li>
                                    <li><a href="#">Nos Promos</a></li>
                                </ul>
                            </li>
                        </div>
                        <div class="col-sm-6"></div>
                    </div>
                </div>
                <div class="col-sm-8"></div>    
            </div>
        </header>
        {% block body %}{% endblock %}
        
    </body>
</html>
